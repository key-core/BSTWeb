@{
    ViewBag.Title = "Eliminar Visitas a Médicos de Consulta Privada";
}
<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>
@(Html.Kendo().Grid<MedinetWeb.SP_MWL_GetVisitasMedicos_Result>()
        // Grid Name
    .Name("Grid")

    // Declare grid column
    .Columns(columns =>
                 {
                     columns.Bound(r => r.REGISTRO).Title("REGISTRO");
                     columns.Bound(r => r.DOCTOR).Title("DOCTOR");
                     columns.Bound(r => r.FECHA_VISITA).Title("FECHA");
                     columns.Bound(r => r.TIPO).Title("TIPO");
                     columns.Command(c =>
                     {
                         c.Custom("DeleteVisitMedico").Text("Eliminar").Click("goToDelete");
                     });
                 })

    // Declare ajax datasource.
        // CRUD operation are wired back to ASP MVC Controller/Action e.g. HomeController, GetAll
        // Set the model Id
    .DataSource(datasoure => datasoure.Ajax()
                                .Events(events => events.Error("GridError"))
                                .Model(model =>
                                    {
                                        model.Id(record => record.REGISTRO);
                                    }
                                )
                                .Read(read => read.Action("GetAll", "EliminarVisitaMedico"))

    )

    //.Events(e => e.DataBound("onDataBound"))

    // Set grid selectable.
    .Selectable()

    // Set grid sortable.
    .Sortable()

    // Set grid groupable.
    //.Groupable()

    // Set grid filterable.
    .Filterable()
    // Set grid pagable.
    .Pageable(pageable =>
                    {
                        pageable.Refresh(true);
                        pageable.PageSizes(true);
                    })
)



