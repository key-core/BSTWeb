<script>
    
    function goToDelete(e) {
        var tr = $(e.currentTarget).closest("tr");
        var item = $("#Grid").data("kendoGrid").dataItem(tr);

        var REGISTRO = item.REGISTRO;
        var TIPO = item.TIPO;

        var retVal = confirm("¿Desea eliminar la visita seleccionada?");
        if (retVal == true) {
            window.location.href = "@Url.Action("Delete","EliminarVisitaMedico")?REG=" + REGISTRO + "&T=" + TIPO;
            return true;
        }

        
    }
    
</script>